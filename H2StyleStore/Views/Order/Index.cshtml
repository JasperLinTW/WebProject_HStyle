@model IEnumerable<H2StyleStore.Models.ViewModels.OrderVM>


@{
    ViewBag.Title = "Index";
}

@{
    IEnumerable<SelectListItem> status = ViewBag.Status;
    var value = ViewBag.Value;
    int total = 0;
}

<h2 class="mt-2 mb-3 donotprint">訂單管理</h2>
<form method="get">
    <div class="row mb-4 mr-2 donotprint">
        <div class="col-lg-12">
            <div class="caption">
                <div class="row">
                    <div class="col-md-3">訂單狀態:@Html.DropDownList("status_id", status, new { @class = "form-control" })</div>
                    <div class="col-md-3">搜尋:<input type="text" name="value" class="form-control" value="@value" placeholder="請輸入訂單編號、會員名稱"></div>
                    <div class="col-md-1 pt-4"><input type="submit" class="btn btn-primary" value="搜尋" /></div>
                    <div class="col-md- pt-4" style="text-align: right;"><a href="@Url.Action("Update")" class="btn btn-warning">批次修改</a></div>
                </div>
            </div>
        </div>
    </div>
</form>
<table class="table table-bordered table-hover borderless">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Order_id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MemberName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Payment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShippedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipVia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Freight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipAddress)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShipPhone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestRefundTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RequestRefund)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr class="orderrow" data-widget="expandable-table" aria-expanded="false">
                <td id="Order_id">
                    @Html.DisplayFor(modelItem => item.Order_id, new { id = "Order_id" })
                    @{
                        if (item.Status_id == 5)
                        {
                            <div class="pl-2">
                                <span class="label label-success ml-2 text-light" style="border: 2px solid #5cb85c; border-radius: 30px; background-color: #5cb85c; font-size:small">已完成</span>
                            </div>
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MemberName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Payment)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShippedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipVia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Freight)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShipPhone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequestRefundTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RequestRefund)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedTime)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td class="edit">
                    <i class="fa-solid fa-pen-to-square"></i>
                </td>
            </tr>
            <tr class="expandable-body d-none">
                <td colspan="14">
                    <p style="display:none">
                        <div class="mx-4 ">
                            <div class="txt-detail donotprint">訂單詳情</div>
                            <table class="container-fluid table-hover borderless">
                                <tr class="no-hover bg-light">
                                    <th>
                                        商品編號
                                    </th>
                                    <th>
                                        商品名稱
                                    </th>
                                    <th>
                                        單價
                                    </th>
                                    <th>
                                        小計
                                    </th>
                                    <th>
                                        數量
                                    </th>
                                    <th>
                                        折扣
                                    </th>
                                </tr>
                                @foreach (var details in item.Order_Details.ToList())
                                {
                                    <tr class="no-hover">
                                        <td>
                                            @Html.DisplayFor(modelItem => details.Product_id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => details.ProductName)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => details.UnitPrice)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => details.Quantity)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => details.SubTotal)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => details.Discount)
                                        </td>
                                    </tr>
                                    total += (details.SubTotal - details.Discount.Value);
                                }
                            </table>
                            <div class="pl-2" style="font-weight:bold ;">合計:@total 元</div>
                        </div>
                    </p>
                </td>
            </tr>
            total = 0;
        }
    </tbody>
</table>


@section Scripts{
    <script>
        $('.edit').on('click', function (event) {
           window.location.href = "https://localhost:44313/Order/Edit/" + parseFloat($(this).siblings('#Order_id').text());
        });
    </script>

}
